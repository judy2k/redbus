<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.redbus" android:versionName="1.0.29" android:versionCode="30">
	
	<application android:label="@string/app_name" android:icon="@drawable/icon">
	    
	   	<activity android:label="Edinburgh Bus Tracker" android:name=".ui.RedbusTabView">
			  <intent-filter>
				<action android:name="android.intent.action.MAIN"></action>
				<category android:name="android.intent.category.LAUNCHER"></category>
			</intent-filter>
		</activity><activity-alias android:name="RedbusTabView" android:label="Edinburgh Bus Tracker" android:targetActivity=".ui.RedbusTabView">
		</activity-alias>
		
		
		
		<activity-alias android:targetActivity=".ui.RedbusTabView" android:name="StopBookmarksActivity"></activity-alias><activity android:theme="@android:style/Theme.Dialog" android:label="Create shortcut" android:name=".ui.CreateShortcutActivity">
        	<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
        	</intent-filter>
		</activity>
        
		<activity-alias android:label="Edinburgh bus stop" 
		android:name="CreateShortcutActivity" 
		android:targetActivity=".ui.CreateShortcutActivity">
			<intent-filter>
				<action android:name="android.intent.action.CREATE_SHORTCUT" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity-alias>
		
		<activity android:name=".ui.arrivaltime.ArrivalTimeActivity" android:label="Bus Times" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
		
		<!--  Alias for launcher shortcut backwards compatibility -->
		<activity-alias android:name="BusTimesActivity"
		android:targetActivity=".ui.arrivaltime.ArrivalTimeActivity">
		</activity-alias>
		
		<activity android:name=".ui.stopmap.StopMapActivity" android:label="Map" />
		<activity android:name=".ui.BookmarksActivity" android:label="Edinburgh Bus Tracker" />
		<uses-library android:name="com.google.android.maps" />
		<receiver android:name=".ui.alert.TemporalAlert"/>
		<receiver android:name=".ui.alert.ProximityAlert"/>
		<receiver android:name=".ui.alert.AlertNotificationPressedReceiver"/>
		
	</application>

	<uses-sdk android:minSdkVersion="3"/>
	<supports-screens android:smallScreens="true" />
	<supports-screens android:largeScreens="true" />
	<supports-screens android:resizeable="true" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.VIBRATE" />
</manifest>
